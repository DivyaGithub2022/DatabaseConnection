package test;

public class ArraysExample {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		//to store multiple values of same data type
		int[] num1 = {20, 30,40,50,60};
		System.out.println("Total number of values are " + num1.length);
		//length here is a data value and not a function length()
		//(below) shows 1 less than total number of values in the array 
		System.out.println("Total number of values are " + (num1.length -1));
		
		System.out.println("Value at 3rd position is " + num1[2]);
		System.out.println("Value at last position is " + num1[num1.length -1]);
		
		//String array
		String[] name1 = {"abc", "xyz", "pqr", "def"};
		System.out.println("Value at 3rd position is " + name1[2]);
		
		String name = "Clean India Green India Love India";
		//to convert the string into array of words - SPLIT is a space delimiter
		String[] arrayofwords = name.split(" ");
		System.out.println(arrayofwords); // - Ljava.lang.String;@36baf30c error
		
		System.out.println("Value at first position is " + arrayofwords[0]);
		System.out.println("Value at 3rd position is " + arrayofwords[2]);
		
		System.out.println("Total number of words are " + arrayofwords.length);
		
		//Arrays.toString(arrayOfWords) - type casting for string ?

	}

}
